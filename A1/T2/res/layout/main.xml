<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/txt_title_delay" android:text="@string/title_delay"></TextView>
    <SeekBar android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/seek_delay" android:max="100"></SeekBar>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/txt_current_delay" android:text="@string/start_delay"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20pt" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/txt_title_service_status" android:text="@string/title_service_status"></TextView>
    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:onClick="onAlarmClick" android:id="@+id/btn_on_off" android:text="@string/arm_alarm"></Button>
</LinearLayout>
